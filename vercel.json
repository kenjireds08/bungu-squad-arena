{
  "functions": {
    "api/*.js": { 
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/admin?action=reset-tournament-active",
      "schedule": "0 2 * * *"
    }
  ]
}